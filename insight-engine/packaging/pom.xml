<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <artifactId>alfresco-insight-engine-distribution</artifactId>
   <name>Alfresco Insight Engine Distribution</name>
   <parent>
      <groupId>org.alfresco</groupId>
      <artifactId>alfresco-insight-engine-parent</artifactId>
      <version>1.0.0-SNAPSHOT</version>
      <relativePath>../pom.xml</relativePath>
   </parent>
   <properties>
      <project.timestamp>${maven.build.timestamp}</project.timestamp>
      <project.build.key>${bamboo_fullBuildKey}</project.build.key>
      <project.revision.key>${bamboo_repository_revision_number}</project.revision.key>
   </properties>
   <build>
      <resources>
         <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
         </resource>
      </resources>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
               <execution>
                  <id>copy-alfresco-search</id>
                  <phase>validate</phase>
                  <goals>
                     <goal>copy</goal>
                  </goals>
                  <configuration>
                     <artifactItems>
                        <artifactItem>
                           <groupId>org.alfresco</groupId>
                           <artifactId>${alfresco.search.dependency.name}</artifactId>
                           <version>${alfresco.search.dependency.version}</version>
                           <type>zip</type>
                        </artifactItem>
                     </artifactItems>
                  </configuration>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <id>unzip-dependency</id>
                  <phase>validate</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <target>
                        <unzip
                           src="${project.build.directory}/dependency/${alfresco.search.dependency.name}-${alfresco.search.dependency.version}.zip"
                           dest="${project.build.directory}/dependency/" />
                     </target>
                  </configuration>
               </execution>
               <execution>
                  <id>set-permissions</id>
                  <phase>validate</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <target>
                        <chmod
                           file="${project.build.directory}/dependency/${alfresco.search.dependency.name}/solr/bin/solr"
                           perm="755" />
                     </target>
                  </configuration>
               </execution>
               <execution>
                  <id>copy-solrconfig_extra</id>
                  <phase>compile</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <target>
                        <copy
                           file="${project.build.directory}/../../alfresco-insight-engine/src/main/resources/solr/solrconfig_extra.xml"
                           todir="${project.build.directory}/dependency/${alfresco.search.dependency.name}/solrhome/templates/rerank/conf/" />
                     </target>
                  </configuration>
               </execution>
               <execution>
                  <id>copy-readme</id>
                  <phase>compile</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <target>
                        <copy
                           file="${project.build.directory}/classes/README.MD"
                           todir="${project.build.directory}/dependency/${alfresco.search.dependency.name}" />
                     </target>
                  </configuration>
               </execution>
               <execution>
                  <id>zip-artifact</id>
                  <phase>compile</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <target>
                        <zip
                           destfile="${project.build.directory}/${project.build.finalName}.zip"
                           basedir="${project.build.directory}/dependency/${alfresco.search.dependency.name}" />
                     </target>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>
</project>
